<%= form_for(@user) do |f| %>
  <%= render 'layouts/errors', :error => @user, :header => "You're account couldn't be created" %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div><br/>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Confirmation' %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
