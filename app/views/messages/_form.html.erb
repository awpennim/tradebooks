<%= form_for(@message) do |f| %>
  <%= render 'layouts/errors', :error => @message, :header => "Your message couldn't be sent" %>

  <% if @user.nil? %>
    <div>
      <%= f.label 'To (please use their username): ' %><br />
      <%= f.text_field :reciever_username %>
    </div> <br />
  <% else %>
    <%= f.hidden_field :reciever_username, :value => @user.username %>
  <% end %>

  <div>
    <%= f.label 'Message (limit 1000 characters)' %><br />
    <%= f.text_area :text, :cols => 50, :rows => 10 %>
  </div> <br />
  <div>
    <%= raw get_captcha(:options => {:theme => 'white', :tabindex => 10}) %><br/>
  </div>
  <div class="actions">
    <%= f.submit 'Send' %>
  </div>
<% end %>
