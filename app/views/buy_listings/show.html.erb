<table class="full_width">
  <tr>
    <td><span class="bold">ID: </span><%= @listing.id_long %></td>
    <td><span class="bold">Poster: </span><%= link_to @listing.poster.username, @listing.poster %></td>
    <td><span class="bold">Location: </span><%= @listing.poster.username %></span>
    <td><span class="bold">Last Renewed: </span><%= time_ago_in_words(@listing.updated_at) %> ago</td>
  </tr>
</table>
<p class="double">Price: <%= number_to_currency(@listing.price) %></p>
<p class="double new_link"><%= link_to "Send #{@listing.poster.username} an Offer to Buy this Book!", root_path %></p>
<p><%= link_to "View other buying listings for #{@textbook.title}", textbook_buy_listings_path(@textbook, @listing) %></p>
