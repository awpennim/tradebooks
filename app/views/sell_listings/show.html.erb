<table class="full_width">
  <tr>
    <td><span class="bold">ISBN: </span><%= link_to @textbook.isbn_dsp, @textbook %></td>
    <td><span class="bold">ID: </span><%= link_to @listing.id_long, textbook_sell_listing_path(@textbook, @listing) %></td>
    <td><span class="bold">Poster: </span><%= link_to @listing.poster.username, @listing.poster %></td>
    <td><span class="bold">Location: </span><%= @listing.poster.username %></span>
    <td><span class="bold">Last Renewed: </span><%= time_ago_in_words(@listing.updated_at) %> ago</td>
  </tr>
</table>
<p class="double">Asking Price: <%= number_to_currency(@listing.price) %></p>

<% if current_user.id == @listing.poster.id %>
  <p><span class="new_link"><%= link_to "Renew your listing!", renew_textbook_sell_listing_path(@textbook, @listing) %></span> | <%= link_to "Why?", root_path %></p>
  <p class="new_link"><%= link_to "Edit your listing", root_path %></p>
  <p class="new_link"><%= link_to "Remove your listing", textbook_sell_listing_path(@textbook, @listing), :confirm => "Are you sure you'd like to remove this listing? This will permantly remove all offers affiliated with this listing.", :method => :delete %></p>
<% else %>
  <p><%= link_to "Send #{@listing.poster.username} a message", new_user_message_path(current_user, :to => @listing.poster.username) %></p>
  <p class="double new_link"><%= link_to "Send #{@listing.poster.username} an Offer for this Book!", root_path %></p>
<% end %>


<p><%= link_to "<-- View other selling listings for #{@textbook.title}", textbook_sell_listings_path(@textbook) %></p>
