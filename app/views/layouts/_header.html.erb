<header>
  <% if logged_in? %>
    <ul class="links left">
      <%= raw display_link(current_user.new_notifications, :notification) %>
      <%= raw display_link(current_user.new_messages, :message) %>
      <%= link_to "Outbox", outbox_user_messages_path(current_user) %>
    </ul>
  <% end %>

  <ul class="links right">
    <% if logged_in? %>
      <li>Welcome, <%= link_to current_user.username, current_user %> (<%= link_to "sign out", signout_path %>) &nbsp; </li>
      <li><%= link_to "Home", home_user_path(current_user) %></li>
      <li><%= link_to "Settings", settings_user_path(current_user) %></li>
    <% else %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Search", textbooks_search_path %></li>
      <li><%= link_to "Sign in", signin_path %></li>
    <% end %>
  </ul>
</header>

<h1><%= link_to 'UMass Textbooks', root_path %></h1>

<%= render 'layouts/flash', :flash => flash %>

<% if @title %>
  <h2><%= @title %></h2> 
<% end %>
