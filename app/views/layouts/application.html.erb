<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
        <% if !flash.empty?  %>
          <div class="flash">
            <% flash.each do |key,value| %>
	      <li class="flash_<%= key %>"><%= value %></li>
	    <% end %>
	  </div>
	<% end %>
        <%= yield %>
      <%= render 'layouts/footer' %>
    </div>  
  </body>
</html>
