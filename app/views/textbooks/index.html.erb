<h2>Textbooks in Database</h2>

<table>
  <tr>
    <th>Isbn</th>
    <th>Author</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @textbooks.each do |textbook| %>
  <tr>
    <td><%= textbook.isbn_dsp %></td>
    <td><%= textbook.author %></td>
    <td><%= textbook.title %></td>
    <td><%= link_to 'Show', textbook %></td>
    <td><%= link_to 'Edit', edit_textbook_path(textbook) %></td>
    <td><%= link_to 'Destroy', textbook, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

