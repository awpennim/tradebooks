<p class="bigger right new_link no_margin">
  <b>
    <%= pluralize @looking_for_counter, "'Looking For' Listing" %> 
  </b> 

  <% if @looking_for_counter > 0 %>
    &nbsp; <%= link_to "View here!", looking_for_textbook_listings_path(@textbook) %>
  <% end %>
  <br />

  <% unless @listing %>
    <span><%= link_to "Post your 'Looking For' Listing!", post_looking_for_textbook_listings_path(@textbook) %></span><br />
  <% end %><br/>

  <b>
    <%= pluralize @for_sale_counter, "'For Sale' Listing" %>
  </b> 
  <% if @for_sale_counter > 0 %>
    &nbsp <%= link_to 'View here!', for_sale_textbook_listings_path(@textbook) %>
  <% end %>
  <br />

  <% unless @listing %>
    <span><%= link_to "Post your 'For Sale' Listing!", post_for_sale_textbook_listings_path(@textbook) %></span><br/><br/>
  <% end %>

    <% if @listing %>
    <br />
    <br />
    <span><%= link_to "Go to Your Listing", textbook_listing_path(@textbook, @listing) %></span>
  <% end %>
</p>

<span>
  <p class="book_info">
    <b>ISBN:</b>
    <%= @textbook.isbn_dsp %>
  </p>

  <p class="book_info">
    <b>Title:</b>
    <%= @textbook.title %>
  </p>

  <p class="book_info">
    <b>Author:</b>
    <%= @textbook.author %>
  </p>

  <% if @textbook.summary %>
    <p class="book_info">
      <b>Summary:</b>
      <%= @textbook.summary %>
    </p>
  <% end %>

  <% if @textbook.publisher_text %>
    <p class="book_info">
      <b>Publisher Info:</b>
      <%= @textbook.publisher_text %>
    </p>
  <% end %>
</span>

<%= link_to 'Back to Search', textbooks_search_path %>
<% if current_user && current_user.admin? %>
<%= link_to 'Edit', edit_textbook_path(@textbook) %>
<%= link_to 'All Books', textbooks_path %>
<% end %>
